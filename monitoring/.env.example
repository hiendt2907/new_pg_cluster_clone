# ============================================================================
# Environment Variables for LGTM+ Monitoring Stack
# ============================================================================

# PostgreSQL Credentials
POSTGRES_PASSWORD=changeme_generate_with_openssl_rand_base64_32
POSTGRES_APP_READONLY_PASSWORD=changeme_generate_with_openssl_rand_base64_32

# ProxySQL Credentials
PROXYSQL_ADMIN_PASSWORD=changeme_generate_with_openssl_rand_base64_32

# Grafana Credentials
GRAFANA_ADMIN_PASSWORD=changeme_generate_with_openssl_rand_base64_32

# Email Notifications (Alertmanager)
SMTP_HOST=smtp.gmail.com:587
SMTP_FROM=alertmanager@pgcluster.local
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack Notifications (Alertmanager)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty (optional)
PAGERDUTY_SERVICE_KEY=your_pagerduty_integration_key

